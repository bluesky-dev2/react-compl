{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./src/types/**/*",
    "./src/__tests__/**/*",
    "./src/__playground__/**/*"
    ]
}